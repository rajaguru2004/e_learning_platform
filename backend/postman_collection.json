                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "users",
                                ":userId"
                            ],
                            "variable": [
                                {
                                    "key": "userId",
                                    "value": "USER_ID_HERE"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Activate User",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"is_active\": true\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/admin/users/:userId/status",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "users",
                                ":userId",
                                "status"
                            ],
                            "variable": [
                                {
                                    "key": "userId",
                                    "value": "USER_ID_HERE"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Deactivate User",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"is_active\": false\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/admin/users/:userId/status",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "users",
                                ":userId",
                                "status"
                            ],
                            "variable": [
                                {
                                    "key": "userId",
                                    "value": "USER_ID_HERE"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Reset User Password",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/admin/users/:userId/reset-password",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "users",
                                ":userId",
                                "reset-password"
                            ],
                            "variable": [
                                {
                                    "key": "userId",
                                    "value": "USER_ID_HERE"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Impersonate User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    console.log('Impersonation Token:', response.data.impersonationToken);",
                                    "    console.log('Target User:', response.data.targetUser);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/admin/users/:userId/impersonate",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "users",
                                ":userId",
                                "impersonate"
                            ],
                            "variable": [
                                {
                                    "key": "userId",
                                    "value": "USER_ID_HERE"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Role Management",
            "item": [
                {
                    "name": "Get All Roles",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/admin/roles",
                            "host": [
                                "{{base_url}}"
                            ],
