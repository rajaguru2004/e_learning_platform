                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Content Manager\",\n  \"permissions\": [\"CREATE_COURSE\", \"EDIT_COURSE\", \"DELETE_COURSE\"]\n}"
                        },
                        "url": {
